{
	"compilerOptions": {
		"target": "es6",
		"module": "esnext",
		"strict": false,

		"allowSyntheticDefaultImports": false,
		"allowUnreachableCode": true,
		"allowUnusedLabels": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"noEmitOnError": false,
		"noImplicitAny": false,
		"removeComments": true,
		"paths": {
			"*": ["./node_modules/*"]
		},
		"typeRoots": [
			"./node_modules/@webgpu/types"
		],
		"rootDir": "./typescript/",
		"outDir": "../wwwroot/dist/"
	},
	"include": [
		"./typescript/*.ts"
	],
	"compileOnSave": true
}
